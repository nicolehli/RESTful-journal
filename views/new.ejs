<% include partials/header %>

<div class="ui main text container segment">
  <div class="ui huge header">New Minute</div>
  <form class="ui form" action="/blogs" method="POST">
      
      <div class="field">
          <label>Title</label>
          <input type="text" name="blog[title]" placeholder="title">
      </div>
      
      <div class="field">
          <label>Blog Post</label>
          <textarea name="blog[body]" placeholder="I am grateful for / Something amazing that happened today was..."></textarea>
      </div>
      
      <div class="field">
          <label>An image to remember today by...</label>
          <input type="text" name="blog[image]" placeholder="Image URL">
      </div>
      
      <input class="ui violet big basic button" type="submit">
      
  </form>
</div>

